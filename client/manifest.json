{
  "name": "Querycardz",
  "version": "1.0",
  "description": "Querycardz 1.0",
  "permissions": [
    "input",
    "activeTab",
    "declarativeContent",
    "storage",
    "<all_urls>",
    "tabs"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "page_action": {
    // "default_popup": "popup.html",
    "default_icon": {
      "16": "images/querycardz16.png",
      "32": "images/querycardz32.png",
      "48": "images/querycardz48.png",
      "128": "images/querycardz128.png"
    }
  },
  "icons": {
    "16": "images/querycardz16.png",
    "32": "images/querycardz32.png",
    "48": "images/querycardz48.png",
    "128": "images/querycardz128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://code.jquery.com/ https://stackpath.bootstrapcdn.com https://cdn.jsdelivr.net; object-src 'self'"
}